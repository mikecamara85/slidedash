{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version (ES6 recommended).
    "module": "commonjs", // Specify module code generation.
    "strict": true, // Enable all strict type-checking options.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "outDir": "./dist", // Redirect output structure to the directory.
    "rootDir": "./src", // Specify the root directory of input files.
    "resolveJsonModule": true, // Include modules for processing JSON data.
    "typeRoots": ["./node_modules/@types"], // Specify root directories for type definitions.
    "lib": ["es6", "dom"] // Specify library files to be included in the compilation.
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory.
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude test files and node_modules.
}
